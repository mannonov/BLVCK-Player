<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="uz.jaxadevgroup.blvckplayer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="uz.jaxadevgroup.blvckplayer.App"
        android:icon="@drawable/programmity"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/programmity"
        android:supportsRtl="true"
        android:theme="@style/DarkTheme">
        <activity android:name="uz.jaxadevgroup.blvckplayer.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="uz.jaxadevgroup.blvckplayer.AlbumDetails" />
        <activity
            android:name="uz.jaxadevgroup.blvckplayer.PlayerActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity android:name="uz.jaxadevgroup.blvckplayer.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <receiver
            android:name="uz.jaxadevgroup.blvckplayer.NotificationReciever"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="actionprevious" />
                <action android:name="actionnext" />
                <action android:name="actionplay" />
                <action android:name="actiondelete" />
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <service
            android:name="uz.jaxadevgroup.blvckplayer.MusicService"
            android:enabled="true"></service>
    </application>

</manifest>