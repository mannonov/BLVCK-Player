<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aman.playmusix">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:icon="@drawable/programmity"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:name="uz.jaxadev.blvckplayer.App"
        android:supportsRtl="true"
        android:theme="@style/DarkTheme">
        <activity android:name="uz.jaxadev.blvckplayer.AlbumDetails" />
        <activity
            android:name="uz.jaxadev.blvckplayer.PlayerActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity android:name="uz.jaxadev.blvckplayer.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name="uz.jaxadev.blvckplayer.NotificationReciever"
            android:enabled="true" android:exported="false">
            <intent-filter>
                <action android:name="actionprevious"/>
                <action android:name="actionnext"/>
                <action android:name="actionplay"/>
                <action android:name="actiondelete"/>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        <service android:name="uz.jaxadev.blvckplayer.MusicService"
            android:enabled="true">
        </service>
    </application>

</manifest>